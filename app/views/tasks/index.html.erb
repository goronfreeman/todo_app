<div class="container" style="margin-top:20px;">
	<div class="row">
        <div class="col-xs-6">
            <h3 class="text-center">Tasks</h3>
            <div class="well" style="overflow: auto;">
        		<ul class="list-group checked-list-box">
              <% @tasks.incomplete.each do |task| %>
                  <li class="list-group-item">
										<%= "#{task.name}"%>
										<%= button_to 'Done', complete_task_path(task), method: :put, class: 'btn btn-primary', data: { confirm: 'Task Completed?'}%>
									</li>
              <% end %>
            </ul>
            <br />
            <%= link_to 'Create task', new_task_path, class: 'btn btn-primary col-xs-12' %>
            </div>
        </div>
    </div>
</div>

<div class="container" style="margin-top:20px;">
	<div class="row">
        <div class="col-xs-6">
            <h3 class="text-center">Complete Tasks</h3>
            <div class="well" style="overflow: auto;">
        		<ul class="list-group checked-list-box">
              <% @tasks.complete.each do |task| %>
                  <li class="list-group-item">
										<strike><%= "#{task.name}"%></strike>
										<%= button_to 'Done', complete_task_path(task), method: :put, class: 'btn btn-primary', data: { confirm: 'Task Completed?'}%>
									</li>
              <% end %>
            </ul>
            <br />
            <%= link_to 'Create task', new_task_path, class: 'btn btn-primary col-xs-12' %>
            </div>
        </div>
    </div>
</div>
