<h1>Tasks</h1>

<table class='table table-striped table-hover'>
  <thead>
    <tr>
      <th>Task</th>
      <th>Actions</th>
    </tr>
  </thead>

  <% @tasks.each do |task| %>
    <tr>
      <td><%= task.item %></td>
      <td><%= link_to 'edit ', edit_task_path(task) %>
      <%= link_to 'delete ', task_path(task), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Create task', new_task_path, class: 'btn btn-primary' %>
